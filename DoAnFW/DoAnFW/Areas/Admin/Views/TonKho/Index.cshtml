@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Quản lí tồn kho";
    Layout = "_Layout";
}
@model List<Object>
@{ int i = 1; }

<h2>Quản lí tồn kho</h2>
<br />

<div class="table-responsive table-responsive-data2">
    <table class="table table-data2">
        <thead>
            <tr>
                <th>STT</th>
                <th>Mã tồn kho</th>
                <th>Ảnh</th>
                <th>Tên</th>
                <th>Số lượng tồn</th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            var imagePath = "/image/" + (item.GetType().GetProperty("IMG").GetValue(item, null));
            <tbody>
                <tr class="tr-shadow">
                    <td>@i</td>
                    <td>
                        <span class="block-email">@item.GetType().GetProperty("MaSP").GetValue(item, null)</span>
                    </td>
                    <td><img class="img-rounded" height="100" src="@imagePath" /></td>

                    <td class="desc">@item.GetType().GetProperty("TenSP").GetValue(item, null)</td>
                    <td>
                        <span  class="status--process">@item.GetType().GetProperty("SoLuongTon").GetValue(item, null)</span>
                    </td>
                    <td>
                        <div class="table-data-feature">
                            <a asp-action="EditTonKho" asp-route-id="@item.GetType().GetProperty("MaSP").GetValue(item, null)" class="item" data-toggle="tooltip" data-placement="top" title="Edit" id="@item.GetType().GetProperty("MaSP").GetValue(item, null)">
                                <i class="zmdi zmdi-edit"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            </tbody>
            i = i + 1;
        }
    </table>
</div>
