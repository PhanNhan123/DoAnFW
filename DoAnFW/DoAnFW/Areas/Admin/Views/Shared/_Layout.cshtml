    <!--Bar Chart-->
    <script>
        //Doanh thu theo tháng
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: "/Admin/Home/GetBarChart",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: data_arrive,
            })
        });
        function data_arrive(data) {
            var data_x = data[0];
            var data_y = data[1];
            var graph_data = {
                labels: data_x,
                datasets: [
                    {
                        label: "Doanh thu tháng ",
                        data: data_y,
                        borderColor: "rgba(0, 123, 255, 0.9)",
                        borderWidth: "0",
                        backgroundColor: "rgba(0, 123, 255, 0.5)",
                        fontFamily: "Poppins"
                    }
                ]
            }
            var ctx = document.getElementById("barChart");
            if (ctx) {
                ctx.height = 200;
                var myChart = new Chart(ctx, {
                    type: 'bar',
                    defaultFontFamily: 'Poppins',
                    data: graph_data,
                    options: {
                        legend: {
                            position: 'top',
                            labels: {
                                fontFamily: 'Poppins'
                            }

                        },
                        scales: {
                            xAxes: [{
                                ticks: {
                                    fontFamily: "Poppins"

                                }
                            }],
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true,
                                    fontFamily: "Poppins"
                                }
                            }]
                        }
                    }
                });
            }

        }
    </script>

    <script>
        //Doanh thu theo ngày
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: "/Admin/Home/GetLineChart",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: data_arriv,
            })
        });
        function data_arriv(data) {
            var data_x = data[0];
            var data_y = data[1];
            var graph_data = {
                labels: data_x,
                datasets: [
                    {
                        label: "Doanh thu ngày",
                        data: data_y,
                        borderColor: "rgba(0, 123, 255, 0.9)",
                        borderWidth: "0",
                        backgroundColor: "rgba(0, 123, 255, 0.5)",
                        fontFamily: "Poppins"
                    }
                ]
            }
            var ctx = document.getElementById("team-chart");
            if (ctx) {
                ctx.height = 200;
                var myChart = new Chart(ctx, {
                    type: 'line',
                    data: graph_data,
                    options: {
                        responsive: true,
                        tooltips: {
                            mode: 'index',
                            titleFontSize: 12,
                            titleFontColor: '#000',
                            bodyFontColor: '#000',
                            backgroundColor: '#fff',
                            titleFontFamily: 'Poppins',
                            bodyFontFamily: 'Poppins',
                            cornerRadius: 3,
                            intersect: false,
                        },
                        legend: {
                            display: false,
                            position: 'top',
                            labels: {
                                usePointStyle: true,
                                fontFamily: 'Poppins',
                            },


                        },
                        scales: {
                            xAxes: [{
                                display: true,
                                gridLines: {
                                    display: false,
                                    drawBorder: false
                                },
                                scaleLabel: {
                                    display: false,
                                    labelString: 'Month'
                                },
                                ticks: {
